        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsSupplier)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsCustomer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsCustomer)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
