        @if (Model.TransportingCompany != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TransportingCompany)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TransportingCompany.Name)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Редактировать</a> |
    @if(Model.IsCustomer && Model.UserId == null)
    {
        <a asp-controller="UserRoles" asp-action="Create" asp-route-email="@Model.Email">Создать пользователя</a>@: |
    }
    <a asp-action="Index">Назад к списку</a>
