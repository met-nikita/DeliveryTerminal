@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Подтверждение регистрации";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<p>
    <a id="confirm-link" href="@Model.EmailConfirmationUrl">Нажмите здесь, чтобы подтвердить аккаунт</a>
</p>
    }
    else
    {
<p>
        Пожалуйста, проверьте вашу почту, чтобы подтвердить аккаунт.
</p>
    }
}

